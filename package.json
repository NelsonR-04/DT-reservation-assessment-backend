{
  "name": "dt-reservation-assessment-backend",
  "version": "1.0.0",
  "description": "Backend Assessment para Darien Technology",
  "main": "dist/app.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn src/app.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "docker:e2e:up": "docker-compose -f docker/e2e/docker-compose.yml up --build",
    "docker:e2e:down": "docker-compose -f docker/e2e/docker-compose.yml down -v --rmi all",
    "docker:prod:up": "docker-compose -f docker/prod/docker-compose.yml up --build",
    "docker:prod:down": "docker-compose -f docker/prod/docker-compose.yml down -v --rmi all",
    "docker:prod:up:detached": "docker-compose -f docker/prod/docker-compose.yml up -d --build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node prisma/seed.mjs",
    "db:setup": "npm run prisma:migrate && npm run prisma:generate && npm run prisma:seed",
    "db:reset": "prisma migrate reset --force",
    "db:fresh": "npm run db:reset && npm run prisma:seed",
    "db:clean": "prisma migrate reset --skip-seed --force",
    "db:test:setup": "cross-env NODE_ENV=test prisma migrate deploy && cross-env NODE_ENV=test npm run prisma:seed",
    "lint": "eslint . --ext .ts,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.js,.mjs --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "author": "Nelson Rondon",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
